<div class="card">
  <div class="card-divider grid-x">
    <h3 class="cell"><%= provider.name %></h3>
    <small class="cell color-dark-gray">
      <%= provider.service_type.capitalize %>
    </small>
  </div>
  <div class="card-section">
    <h4>Description</h4>
    <p>
      <%= provider.description %>
    </p>
    <p>Website:
      <%= link_to provider[:website].presence || provider_url(provider) %>
    </p>
    <p>Phone:
      <%= provider.phone %>
    </p>
    <p>Email:
      <%= provider.email %>
    </p>
  </div>
</div>
