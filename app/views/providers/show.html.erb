<% @title = "Providers: #{@provider.name}" %>

<h1><%= @provider.name %></h1>

<%= link_to "Show Details", "#", { data: { toggle: "provider-details" }} %>
<div id="provider-details" class="hide" data-toggler=".hide" style="margin-top: 1rem;">
  <div class="grid-x grid-margin-x grid-padding-x">
    <div class="cell medium-6">
      <p>Name: <%= @provider.name %></p>
      <p>Website: <%= @provider.website %></p>
    </div>
    <div class="cell medium-6">
      <p>Phone: <%= @provider.phone %></p>
      <p>Email: <%= @provider.email %></p>
    </div>
    <div class="cell">
      <p>Description: <%= @provider.description %></p>
    </div>
  </div>
</div>

<% if session[:siteadmin] %>
<div class="callout">
  <h5>Admin Options</h5>
  <%= link_to "Edit", edit_provider_path(@provider), class: "button secondary margin-0 rounded" %>
  <%= link_to "Delete", provider_path(@provider), class: "button alert margin-0 rounded", method: "delete" %>
</div>
<% end %>
